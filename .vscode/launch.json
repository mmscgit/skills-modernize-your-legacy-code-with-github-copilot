{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Account Management System",
      "program": "${workspaceFolder}/src/accounting/index.js",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src/accounting",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "program": "${workspaceFolder}/src/accounting/index.js",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src/accounting",
      "args": [
        "--test"
      ]
    }
  ]
}
